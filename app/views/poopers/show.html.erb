<style> 
 
@keyframes sky {
  from {background:#3498db;}
  to {background:#1569C7;}
  
}
@-webkit-keyframes sky {
  from {background:#3498db;}
  to {background:#1569C7;}
  
}
@keyframes sun {
  from {  margin-top:-60px;}
  to {  margin-top:0px;}
  
}
@-webkit-keyframes sun {
  from {  margin-top:-60px;}
  to {  margin-top:0px;}
  
}

body {
 
  animation:sky 2s ease;
  -webkit-animation: sky 2s ease;
  
animation-iteration-count: infinite; 
  -webkit-animation-iteration-count: infinite;
animation-direction: alternate; 
  -webkit-animation-direction: alternate;

}

.cloud {
  margin: 10%  40%;
  
}
.sun {
  width:110px;
  height:110px;
  background:#f1c40f;
animation:sun 2s ease;
  -webkit-animation: sun 2s ease;
  
animation-iteration-count: infinite; 
  -webkit-animation-iteration-count: infinite;
animation-direction: alternate; 
  -webkit-animation-direction: alternate;
  position:absolute;
  z-index:-10;
  border-radius:50%;
  -webkit-border-radius:50%;
}
.cloud-ball {
   width:110px;
  height:110px;
  background:#fff;
  border-radius:50%;
  -webkit-border-radius:50%;
  
}
.cloud-ball::after {
  content:"";
  position:absolute;
  margin:-30px 0px 0px 50px ;
  display:block;
   width:140px;
  height:140px;
  background:#fff;
  border-radius:50%;
  -webkit-border-radius:50%;
  
}
.cloud-ball::before {
  content:"";
  position:absolute;
  margin:-30px 0px 0px 50px ;
  display:block;
   width:140px;
  height:140px;
  background:#fff;
 
 border-top-left-radius:50%;
border-top-right-radius:50%;
border-bottom-right-radius:50%;
border-bottom-left-radius:50%;
  -webkit-border-top-left-radius:50%;
-webkit-border-top-right-radius:50%;
-webkit-border-bottom-right-radius:50%;
-webkit-border-bottom-left-radius:0%;
  
} 
</style>

<div class="cloud">
  <div class="sun"></div>
  <div class="cloud-ball"></div>
